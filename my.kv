<CreateAccountWindow>:
    name: 'create'
    namee: namee
    email: email
    password: passw

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        size: root.width, root.height

        Label:
            text: 'Create an Account'
            size_hint_y: None
            height: 50
            font_size: 30
            halign: 'center'

        TextInput:
            id: namee
            multiline: False
            font_size: 20
            hint_text: 'Enter your name'
            size_hint_y: None
            height: 50

        TextInput:
            id: email
            multiline: False
            font_size: 20
            hint_text: 'Enter your email'
            size_hint_y: None
            height: 50

        TextInput:
            id: passw
            multiline: False
            password: True
            font_size: 20
            hint_text: 'Enter your password'
            size_hint_y: None
            height: 50

        Button:
            text: 'Submit'
            size_hint_y: None
            height: 50
            on_release:
                root.manager.transition.direction = 'left'
                root.submit()

<LoginWindow>:
    name: 'login'
    email: email
    password: password

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        size: root.width, root.height

        Label:
            text: 'Login'
            size_hint_y: None
            height: 50
            font_size: 30
            halign: 'center'

        TextInput:
            id: email
            multiline: False
            font_size: 20
            hint_text: 'Enter your email'
            size_hint_y: None
            height: 50

        TextInput:
            id: password
            multiline: False
            password: True
            font_size: 20
            hint_text: 'Enter your password'
            size_hint_y: None
            height: 50

        Button:
            text: 'Login'
            size_hint_y: None
            height: 50
            on_release:
                root.manager.transition.direction = 'up'
                root.login_btn()

        Button:
            text: "Don't have an account? Sign in!"
            size_hint_y: None
            height: 50
            on_release:
                root.manager.transition.direction = 'right'
                root.create_btn()

<MainWindow>:
    n: n
    email: email
    created: created

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        size: root.width, root.height

        Label:
            id: n
            text: 'Account Name: '
            size_hint_y: None
            height: 50
            font_size: 20
            halign: 'left'

        Label:
            id: created
            text: 'Created: '
            size_hint_y: None
            height: 50
            font_size: 20
            halign: 'left'

        Label:
            id: email
            text: 'Email: '
            size_hint_y: None
            height: 50
            font_size: 20
            halign: 'left'

        Button:
            text: 'Logout'
            size_hint_y: None
            height: 50
            on_release:
                app.root.current = 'login'
                root.manager.transition.direction = 'down'
